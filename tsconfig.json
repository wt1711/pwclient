{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "composite": true,
    "baseUrl": "src",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": [
    "src",
    "vite.config.js",
    "build.config.ts",
    "src/app/components/AIAssistant/AIAssistant.tsx",
    "src/app/components/AIAssistant/SuggestionBox.tsx",
    "src/app/components/AIAssistant/EmptyState.tsx"
  ],
  "references": [{ "path": "./electron/src" }]
}
